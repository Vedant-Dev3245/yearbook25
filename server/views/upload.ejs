<!DOCTYPE html>
<head>
	<meta charset="utf-8" />
	<meta http-equiv="X-UA-Compatible" content="IE=edge" />
	<title>Upload Profile Image</title>
	<meta name="viewport" content="width=device-width, initial-scale=1" />
	<link rel="shortcut icon" href="/assets/images/favicon.ico"/>
	<link rel="stylesheet" href="/assets/stylesheets/upload.css" />
	<link rel="stylesheet" href="/assets/stylesheets/profile.css">

	<link rel="stylesheet"
	href="https://cdn.jsdelivr.net/npm/@fortawesome/fontawesome-free@5.15.3/css/fontawesome.min.css"
	integrity="sha384-wESLQ85D6gbsF459vf1CiZ2+rr+CsxRY0RpiF1tLlQpDnAgg6rwdsUF1+Ics2bni" crossorigin="anonymous">
</head>

<body>
	<nav class="navbar">
		<div class="search-bar">
			<form action="/<%= id %>/search" method="POST">
				<input
					type="text"
					name="user[searched_val]"
					id="search"
					placeholder="Search by BITS Id or Name"
				/>
			</form>
		</div>
		<div class="links" id="nav-links">
			<ul class="nav-links">
				<li><a href="/profile/<%= id %>">Profile</a></li>
				<li><a href="/auth/logout">Logout</a></li>
				<li><a href="/<%= id %>/nominate">Nominate</a></li>
				<li><a href="/profile/<%= id %>/edit">Edit Profile</a></li>
				<li><a href="/<%= id %>/notifications">Notifications</a></li>

			</ul>
		</div>

		<div class="button_container" id="toggle" onclick="toggle()">
			<span class="top"></span>
			<span class="middle"></span>
			<span class="bottom"></span>
		</div>
	</nav>
	<% if (typeof msg!=='undefined') { %>
	<div class="error-msg"><%= msg %></div>
	<% } %>
	<section class="landing">
		<div class="card">
			<h1>Upload Photo</h1>
			<form
				action="/<%= id %>/upload"
				method="POST"
				enctype="multipart/form-data"
			>
				<input
					type="file"
					id="image"
					name="image"
					class="inputfile"
					data-multiple-caption="{count} files selected"
					multiple
				/>
				<input type="submit" class="btn" />
			</form>
		</div>
	</section>
	
	<footer>
		<h3>Follow us on:</h3>
		<div class="icons">
			<a
				href="https://www.linkedin.com/company/arcbitspilani/?originalSubdomain=in"
				><img src="/assets/images/linkedin.png" id="linkedin"
			/></a>
			<a href="https://www.facebook.com/arcbitspilani/"
				><img src="/assets/images/facebook.png" id="fb"
			/></a>
			<a href="https://www.instagram.com/sarcbitspilani/"
				><img src="/assets/images/instagram.png" id="insta"
			/></a>
		</div>
		<a href="/developers.html"><button id="devs">Developers</button></a>
	</footer>
	<script src="/assets/scipts/app.js"></script>
</body>
